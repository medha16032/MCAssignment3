<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medhagupta.passwordmanager" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".AddData"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_add_data" >
        </activity>
        <activity
            android:name=".AddAccount"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_add_account" >
        </activity>
        <activity
            android:name=".ViewAccount"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_view_account" >
        </activity>
        <activity
            android:name=".AddNotes"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_add_notes" >
        </activity>
        <activity
            android:name=".ViewNotes"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_view_notes" >
        </activity>
        <activity
            android:name=".InternalStorageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_internal_storage" >
        </activity>
    </application>

</manifest>
