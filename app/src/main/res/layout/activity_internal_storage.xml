<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
    tools:context="com.example.medhagupta.passwordmanager.InternalStorageActivity">



        <TextView
            android:id="@+id/editTextInternalStorage"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:text="Internal storage"
            android:textSize="30dp"
            android:background="#e73a5e"
            android:textColor="#FFF3E0"
            android:textStyle="bold"
            android:gravity="center_vertical" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
            android:id="@+id/textViewRead"
        android:textSize="20sp"
            android:padding="10dp"
        android:layout_marginTop="55dp"
            android:layout_below="@+id/editTextInternalStorage"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="load"
            android:id="@+id/loadButton"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>
