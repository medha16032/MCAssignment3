<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.medhagupta.passwordmanager.AddAccount">

    <TextView
        android:id="@+id/accounts"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:text="Add Account"
        android:textSize="30dp"
        android:background="#e73a5e"
        android:textColor="#FFF3E0"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccountName"
        android:hint="Enter account name"
        android:ems="10"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/accounts"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addAccountUsername"
        android:ems="10"
        android:hint="Enter account username"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/AccountName"
        android:layout_alignLeft="@+id/AccountName"
        android:layout_alignStart="@+id/AccountName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addAccountPasssword"
        android:ems="10"
        android:hint="Enter account password"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/addAccountUsername"
        android:layout_alignLeft="@+id/addAccountUsername"
        android:layout_alignStart="@+id/addAccountUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/addAccountPasssword"
        android:background="#FF4081"
        android:padding="8dp"
        android:textColor="#FFF3E0"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
